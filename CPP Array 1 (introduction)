//Fist Problem Solution Code:
//Q1 - Given an integer array(arr) and its size(n), print the count of odd and even integers present in the array.

#include<iostream>
using namespace std;

int main(){
  int arr[]={1,2,3,4,5};
  int n=5;
  int odd_count=0;
  int even_count=0;

  for(int i=0; i<n; i++){
    if(arr[i]%2==0){
      even_count++;
    }
    else{
      odd_count++;
    }
  }

  cout<<"Odd Numbers = "<<odd_count<<endl;
  cout<<"Eve Numbers = "<<even_count<<endl;
  
}

//Second Problem Solution Code:
//Q2 - Given an integer array and its size, find the sum of the greatest and the smallest integer present
//in the array. Here 1< size <101

#include<iostream>
using namespace std;

int main(){
  int arr[]={1,2,3,4,5};
  int n=5;

  int min=101;
  int max=0;
  int sum=0;
  
  for(int i=0; i<n; i++){
    if(arr[i]<min){
      min=arr[i];
    }
    if(arr[i]>max){
      max=arr[i];
    }
  }
  sum=min+max;
  cout<<sum;
}

